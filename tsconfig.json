{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "pretty": true,
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "ts-build",
        "rootDirs": [
            "./src"
        ],
        "lib": [
            "es5",
            "es6",
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "src/definitions",
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}